{
  "name": "vue3-starter",
  "version": "1.0.0",
  "author": {
    "name": "ydfk",
    "email": "lyh6728326@gmail.com",
    "url": "https://github.com/ydfk/vue3-starter"
  },
  "scripts": {
    "dev:pre": "node ./node_modules/esbuild/install.js",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "type:check": "vue-tsc --noEmit --skipLibCheck",
    "clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
    "clean:lib": "rimraf node_modules",
    "lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,sass,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"src/**/*.{vue,less,postcss,css,scss,sass}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint": "lint-staged -c ./.husky/lintstagedrc.js",
    "cz": "git add . && git cz",
    "prepare": "husky install",
    "reinstall": "rimraf yarn.lock && rimraf package.lock.json && rimraf node_modules && yarn install",
    "release": "standard-version"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "dayjs": "^1.10.7",
    "lodash-es": "^4.17.21",
    "mockjs": "^1.1.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.0-rc.6",
    "qs": "^6.10.1",
    "vue": "^3.0.5",
    "vue-router": "4"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^16.9.1",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vitejs/plugin-vue": "^1.6.2",
    "@vitejs/plugin-vue-jsx": "^1.1.8",
    "@vue/compiler-sfc": "^3.2.11",
    "autoprefixer": "^10.3.4",
    "commitizen": "^4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "conventional-changelog-gitmoji-config": "^1.4.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^1.0.9",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "scss": "^0.2.4",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "vite": "^2.5.7",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-windicss": "^1.4.3",
    "vue-eslint-parser": "^7.11.0",
    "vue-tsc": "^0.3.0",
    "windicss": "^3.1.7",
    "windicss-analysis": "^0.3.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
